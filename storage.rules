rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 게시물 이미지 규칙
    match /posts/{allPaths=**} {
      // 인증된 사용자만 업로드 가능
      allow write: if request.auth != null;
      // 모든 사용자가 읽기 가능
      allow read: if true;
    }
    
    // 사용자 프로필 이미지 규칙
    match /users/{userId}/{allPaths=**} {
      // 본인만 업로드 가능
      allow write: if request.auth != null && request.auth.uid == userId;
      // 모든 사용자가 읽기 가능
      allow read: if true;
    }
  }
}

